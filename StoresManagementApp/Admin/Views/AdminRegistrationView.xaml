<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StoresManagementApp.Admin.Views.AdminRegistrationView"
    xmlns:vm="clr-namespace:StoresManagementApp.Admin.ViewModels">


 
          <ContentPage.Content>
        <StackLayout Margin="30,0" Spacing="30" VerticalOptions="CenterAndExpand">
            <Label Text="Register Admin" FontSize="24" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" TextColor="DodgerBlue"/>
        <Entry x:Name="Username" Placeholder="Username" Text="{Binding Username}"></Entry>
        <Entry x:Name="Password" Placeholder="Password" Text="{Binding Password}"></Entry>
        <Button Text="Register Admin" HorizontalOptions="Center" BackgroundColor="SkyBlue"
                        TextColor="White" WidthRequest="200" HeightRequest="60" CornerRadius="20" Clicked="Button_Clicked"  />
        </StackLayout>
    </ContentPage.Content>




</ContentPage>
