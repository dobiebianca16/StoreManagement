<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StoresManagementApp.Admin.Views.AdminLoginView"
>

   
        <ContentPage.Content>
        <StackLayout Margin="30,0" Spacing="30" VerticalOptions="CenterAndExpand">
            <Label Text="Login Admin" FontSize="24" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" TextColor="DodgerBlue"/>
        <Entry Placeholder="Username" Text="{Binding Username}"></Entry>
        <Entry Placeholder="Password" Text="{Binding Password}"></Entry>
        <Button Text="Login Admin" HorizontalOptions="Center" BackgroundColor="DodgerBlue"
                        TextColor="White" WidthRequest="200" HeightRequest="60" CornerRadius="20" Command="{Binding LoginAdmin}"/>
        <Button Text="Register Admin" HorizontalOptions="Center" BackgroundColor="SkyBlue"
                        TextColor="White" WidthRequest="200" HeightRequest="60" CornerRadius="20" Clicked="Button_Clicked"  />
        </StackLayout>
    </ContentPage.Content>


</ContentPage>
