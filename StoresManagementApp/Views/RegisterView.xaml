<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="StoresManagementApp.Views.RegisterView">
    <ContentPage.Content>
        <StackLayout Margin="30,0" Spacing="30" VerticalOptions="CenterAndExpand">
            <Label Text="Register User" FontSize="24" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" TextColor="DodgerBlue"/>
        <Entry Placeholder="Username" Text="{Binding Username}"></Entry>
        <Entry Placeholder="Password" Text="{Binding Password}"></Entry>
        <Entry Placeholder="Email" Text="{Binding Email}"></Entry>
        <Button Text="Register" HorizontalOptions="Center" BackgroundColor="DodgerBlue"
                        TextColor="White" WidthRequest="200" HeightRequest="60" CornerRadius="20" Command="{Binding RegisterCommand}"/>
        <Button Text="Back to login" HorizontalOptions="Center" BackgroundColor="SkyBlue"
                        TextColor="White" WidthRequest="200" HeightRequest="60" CornerRadius="20" Clicked="BackCommand" />
        </StackLayout>
    </ContentPage.Content>
 
</ContentPage>
